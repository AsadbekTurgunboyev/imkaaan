<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_10sdp"
     android:paddingTop="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="Xizmatlar"
        android:background="#DDDDDD"
        android:textStyle="bold"
        android:textColor="#DDDDDD"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000 So'm"
        android:textColor="#DDDDDD"
        android:background="#DDDDDD"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="@+id/textViewp"
        app:layout_constraintTop_toBottomOf="@+id/textViewp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#DDDDDD"
        android:layout_marginStart="@dimen/_10sdp"
        android:src="@drawable/ic_info_circle"
        app:layout_constraintBottom_toBottomOf="@+id/textViewp"
        app:layout_constraintStart_toEndOf="@+id/textViewp"
        app:layout_constraintTop_toTopOf="@+id/textViewp"
        app:tint="#DDDDDD" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchTarif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:theme="@style/MyIOSSwitch"
        app:thumbTint="#DDDDDD"
        app:trackTint="#DDDDDD"
        android:thumb="@drawable/thumb_selector"
        app:layout_constraintBottom_toBottomOf="@+id/textView2p"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewp"
        app:track="@drawable/track_selector" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/textView2p"
        tools:layout_editor_absoluteX="13dp" />
</androidx.constraintlayout.widget.ConstraintLayout>